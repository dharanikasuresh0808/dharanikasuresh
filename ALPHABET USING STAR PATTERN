1)STAR PATTERN X
#include<stdio.h>
int main()
{
	int i, j, num;
	printf("Enter number of rows:\t");
	scanf("%d", &num);
	for(i = 0; i < num; i++)
	{
		for(j = 0; j < num; j++)
		{
			if(i == j || j == (num - i - 1))
				printf("*");
			else
				printf(" ");
		}
		printf("\n");
	}
}

2)STAR PATTERN K
#include<stdio.h>
int main()
{
    int i, j, k, num;
    
    printf("Enter the number of rows:\t");
    scanf("%d", &num);
    
    for(i =- num; i <= num; i++)
    {
        k = i;
        
        if(k < 0)
            k = k * -1;
        
            for(j = 0; j <= num; j++)
            {
                if(k >= j)
                    printf("* ");
                else
                    printf(" ");
            }
            printf("\n");
    }
}

3)STAR PATTERN E
#include <stdio.h>

int main() {
   int n=5;
       for(int i=0 ; i<n; i++)
  {
   for (int j=0; j<n; j++) 
    {
      if( j==0 || i==n/2||i==n-1||i==0 )
      {
      printf("* ");
    }
    else
    { 
      printf(" ");
    }
    }
  printf("\n");
}
}

4)STAR PATTERN T
int main() {
  int n=5;
  for (int i=0 ; i<n; i++)
  {
   for (int j=0; j<n; j++) 
    {
      if( i==0 ||j==n/2 )
      {
      printf("* ");
    }
    else
    { 
      printf(" ");
    }
    }
      printf("\n");
   }
}
