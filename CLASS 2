    //else-body
}

8)BOOKING A TRAIN TICKET
#include<stdio.h>
int main()
{
  int age=45;
  
  if(age<=12)
  {
  printf("child ticket");
  }
  else if(age>13 && age<60)
  {
  printf("normal ticket");
  }
  else
  {
 printf("n.daapthi");
  }
  return 0;
}

9)FIND A CODE FOR DRESS PURCHASE DISCOUNT
#include<stdio.h>
int main()
 {

  int a;

  printf("Enter the purchase of rupees in a:");

  scanf("%d",&a);

  if (a<1000)

  {

    printf("0%% Discount");

     

  }

  else if (a>1000 && a<5000 )

  {

    printf("50%% Discount");

     

  }

  else

  {

    printf("75%% Discount");

  }

  return 0;

}

10)find the states
#include <stdio.h>

int main()
{
    int num =121;
    if(num%2==0 && num%3==0)
  {
      printf("chandigarh...");
  }
else if(num%2==0)
 {
     printf("punjab...");
 }
 else if(num%3==0)
 {
     printf("delhi...");
 }
 else
 {
     printf("tamilnadu...");
 }
}
