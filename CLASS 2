#include <stdio.h>

int main() 
{
   int num=15;
   printf("progaram starts...\n");
   if(num%2==0 || num%3==0)
   {
       printf("dharanika\n");
   }
   printf("program ends...\n");
}

IF ELSE STATEMENT 2

5)FIND THE MINOR OR MAJOR
/*
if(condition)
{
    
}
*/

#include<stdio.h>
int main()
{
    int age=21;
    
   if(age>18)
   {
       printf("major");
   }
   else
   {
       printf("minor");
   }
   return 0;
}

