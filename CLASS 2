1)FIND THE NUMBER EVEN OR ODD
/*
if(condition)
{
    
}
*/

#include<stdio.h>
int main()
{
    int num=21;
    
   if(num%2==0)
   {
       printf("even no");
   }
   else
   {
       printf("odd no");
   }
   return 0;
}
2)FIND THE MINOR OR MAJOR
/*
if(condition)
{
    
}
*/

#include<stdio.h>
int main()
{
    int age=21;
    
   if(age>18)
   {
       printf("major");
   }
   else
   {
       printf("minor");
   }
   return 0;
}
