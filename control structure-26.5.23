14)ELIGIBLE FOR BACHELOR
#include <stdio.h>

int main()
{
  char gender='M';
  int age =23;
  
  if(gender == 'M' || gender=='m')
  {
      if(age>=18)
      {
          printf("eligible bachelore...");
      }
      else
      {
          printf("not eligible bachelore...");
      }
  }
  else if(gender == 'F' || gender=='f')
  {
     if(age>=18)
      {
          printf("eligible spinster...");
      }
      else
      {
          printf("not eligible spinster...");
      }
  }
  else
  {
      printf("please check the given details...");
  }
}
 
