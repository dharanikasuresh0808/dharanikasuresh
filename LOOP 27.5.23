#include <stdio.h>
int main()
{
  int no=123;
  int rem=0;
  int sum=0;
  while (no > 0)
  {
    rem = no % 10;
    sum = sum + rem;
    no = no / 10;
  }
  printf("\nThe sum of digit is %d", sum);
  return 0;
}

