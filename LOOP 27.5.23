8)STAR PATTERN X
#include<stdio.h>
int main()
{
	int i, j, num;
	printf("Enter number of rows:\t");
	scanf("%d", &num);
	for(i = 0; i < num; i++)
	{
		for(j = 0; j < num; j++)
		{
			if(i == j || j == (num - i - 1))
				printf("*");
			else
				printf(" ");
		}
		printf("\n");
	}
}

